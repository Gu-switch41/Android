<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <style name="LabelStyle" parent="Theme.AppCompat">
        <!-- Customize your theme here. -->
        <item name="android:textSize">10dp</item>
    </style>

    <style name="EditStyle" parent="Theme.AppCompat">
        <!-- Customize your theme here. -->
        <item name="android:textSize">13dp</item>
    </style>


    <style name="CategoriaStyle" parent="@style/Base.TextAppearance.AppCompat.Light.Widget.PopupMenu.Small">
        <!-- Customize your theme here. -->
        <item name="android:textSize">14dp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:fontFamily">serif-monospace</item>
        <item name="android:textStyle">bold|normal</item>
        <item name="android:drawableStart">@android:drawable/checkbox_on_background</item>
    </style>

</resources>
